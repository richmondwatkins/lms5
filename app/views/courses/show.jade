

html(lang='en')
head
    meta(charset='utf-8')
    title jQuery UI Accordion - Default functionality
    link(rel='stylesheet', href='//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css')
    script(src='//code.jquery.com/jquery-1.10.2.js')
    script(src='//code.jquery.com/ui/1.10.4/jquery-ui.js')
    link(rel='stylesheet', href='/resources/demos/style.css')
    link(href='/less/app.css', rel='stylesheet')
    link(href='/css/normalize.css', rel='stylesheet')
    script
      $(function() {
      $( "#accordion" ).accordion();
      });
  body
    #header-content
      #logo
        if(teacher)
          a(href='/teacher/dashboard')
            img(src='/img/logo.svg')
        if(student)
          a(href='/student/dashboard')
            img(src='/img/logo.svg')

      if(teacher)
        a(href='/teacher/dashboard') DASHBOARD
      if(student)
        a(href='/student/dashboard') DASHBOARD

      if(teacher)
        a(href='/teacher/courses/all') COURSES
        form(method='POST', action='/teacher/dashboard', enctype='multipart/form-data')
          input#teacher-avatar(type='file', name='avatar')
          button Add Avatar

      if(student)
        a(href='/student/courses/all') COURSES
        form(method='POST', action='/student/dashboard', enctype='multipart/form-data')
          input#student-avatar(type='file', name='avatar')
          button Add Avatar



      #user
        a#logout(href='#') Logout
        #username
          if(teacher)
            p#user= teacher.name
            if(teacher.avatar.photo)
              img.avatar(src='/img/#{teacher.name}/#{teacher.avatar.photo}')

          if(student)
            p#user= student.name
            if(student.avatar.photo)
              img.avatar(src='/img/#{student.name}/#{student.avatar.photo}')


    #accordion
      each lesson in course.material
        h3= lesson.title
        div
          p!= lesson.content


    if(teacher)
      a#taketest(href='/course/#{course._id}/test') Take Test
    if(student)
      a#taketest(href='/student/course/#{course._id}/test') Take Test


